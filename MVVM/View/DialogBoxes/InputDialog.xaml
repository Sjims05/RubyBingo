<Window x:Class="RubyBingoApp.MVVM.View.DialogBoxes.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RubyBingoApp.MVVM.View.DialogBoxes"
        mc:Ignorable="d"
        Title="InputmDialog"
        Background="{DynamicResource Dark-Bg}"
        SizeChanged="Window_SizeChanged"
        Topmost="True"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        MinWidth="250"
        MinHeight="150"
        MaxWidth="600"
        MaxHeight="450">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="10" 
                      CornerRadius="0" 
                      CaptionHeight="0"
                      NonClientFrameEdges="Right"
                      ResizeBorderThickness="11"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <ResourceDictionary Source="\Resources/MainWindowResource.xaml"/>
    </Window.Resources>

    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Stretch" MouseDown="Grid_MouseDown" ClipToBounds="False" VerticalAlignment="Stretch">

            <Label x:Name="TitleLabel" 
                   Background="Transparent"
                   Content="Message" 
                   Foreground="{DynamicResource Grey-Text}" 
                   FontWeight="Bold" 
                   Height="25"
                   Margin="10,0,0,1" ClipToBounds="False"/>

            <Button HorizontalAlignment="Right"
                    Width="25" 
                    Height="25" 
                    Content="⨉" 
                    Foreground="{DynamicResource Grey-Text}" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    FontSize="15" 
                    FontWeight="Bold" 
                    Margin="0,0,5,0" 
                    Click="ButtonExit_Click"
                    Template="{StaticResource WindowButtons}"/>
        </Grid>

        <Border Grid.Row="1" 
                Background="{DynamicResource Main-Bg}" 
                CornerRadius="10"
                BorderThickness=".5"
                BorderBrush="{DynamicResource Grey-Text}">

            <Grid>
                <TextBox x:Name="InputTextBox" 
                         Background="Transparent"
                         TextWrapping="Wrap"
                         Foreground="{DynamicResource LightGrey-Text}"
                         FontSize="15"
                         FontWeight="Bold"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="15,20,15,20"
                         MinWidth="150"
                         BorderBrush="{DynamicResource DarkGrey-Text}"
                         BorderThickness=".5"
                         Panel.ZIndex="1">
                </TextBox>
                <TextBlock x:Name="WatermarkTextBlock" 
                           Background="{DynamicResource Dark-Bg}"
                           TextWrapping="Wrap"
                           Foreground="{DynamicResource LightGrey-Text}"
                           FontSize="15"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="15,20,15,20"
                           Width="150"
                           Padding="5,0,0,0"
                           Panel.ZIndex="0">
                    <TextBlock.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBlock.Resources>
                </TextBlock>
                <TextBlock x:Name="MessageTextBlock" 
                           Background="Transparent"
                           TextWrapping="Wrap"
                           Foreground="#d10e00"
                           FontSize="15"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"
                           Margin="15,0,15,2.5"/>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="85"/>
            </Grid.ColumnDefinitions>

            <Border Background="{DynamicResource Main-Bg}" 
                    CornerRadius="10"
                    BorderThickness=".5"
                    BorderBrush="{DynamicResource Grey-Text}"
                    Height="25"
                    Width="75"
                    HorizontalAlignment="Right"
                    Margin="10,0,10,0"
                    MouseLeftButtonDown="Click_Enter">

                <Label Style="{StaticResource BasicLabel}" 
                       HorizontalAlignment="Center"
                       FontSize="12.5"
                       Foreground="{DynamicResource Grey-Text}"
                       Content="Enter"
                       Padding="0"/>
            </Border>

            <Border Grid.Column="1" 
                    Background="{DynamicResource Main-Bg}" 
                    CornerRadius="10"
                    BorderThickness=".5"
                    BorderBrush="{DynamicResource Grey-Text}"
                    Height="25"
                    Width="75"
                    HorizontalAlignment="Right"
                    Margin="0,0,10,0"
                    MouseLeftButtonDown="Click_Cancel">

                <Label Style="{StaticResource BasicLabel}" 
                       HorizontalAlignment="Center"
                       FontSize="12.5"
                       Foreground="{DynamicResource Grey-Text}"
                       Content="Cancel"
                       Padding="0"/>
            </Border>

        </Grid>

    </Grid>
</Window>
