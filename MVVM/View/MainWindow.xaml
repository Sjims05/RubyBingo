<Window x:Class="RubyBingoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RubyBingoApp"
        mc:Ignorable="d"
        Title="Ruby Bingo Pro" Height="650" Width="1200"
        Background="{DynamicResource Dark-Bg}"
        SizeChanged="Window_SizeChanged"
        ResizeMode="CanResizeWithGrip"
        Topmost="False">
        <!--Icon=""-->
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="10" 
                      CornerRadius="0" 
                      CaptionHeight="0"
                      NonClientFrameEdges="Right"
                      ResizeBorderThickness="11"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary Source="\Resources/MainWindowResource.xaml"/>
    </Window.Resources>
    
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0"
                    MouseLeftButtonUp="Hotbar_Home">
                <Border VerticalAlignment="Center"
                        Padding="35,0,0,0">
                    <Label Content="[Insert Icon]" 
                           Style="{StaticResource BasicLabel}"
                           FontSize="15"/>
                </Border>
            </Border>
            <Border Grid.Row="1"
                    MouseLeftButtonUp="Hotbar_SavedBoards">
                <Border VerticalAlignment="Center"
                        Padding="35,0,0,0">
                    <Label Content="Saved Boards" 
                           Style="{StaticResource BasicLabel}"
                           FontSize="15"/>
                </Border>
            </Border>
            <Border Grid.Row="2"
                    MouseLeftButtonUp="Hotbar_Stats">
                <Border VerticalAlignment="Center"
                        Padding="35,0,0,0">
                    <Label Content="Stats" 
                           Style="{StaticResource BasicLabel}"
                           FontSize="15"/>
                </Border>
            </Border>
            <Border Grid.Row="3">
                <!-- Hotbar_Styling -->
                <Border VerticalAlignment="Center"
                        Padding="35,0,0,0">
                    <!-- Styling -->
                    <Label Content="" 
                        Style="{StaticResource BasicLabel}"
                           FontSize="15"/>
                </Border>
            </Border>
            <Border Grid.Row="5">
                <Border VerticalAlignment="Center"
                        Padding="35,0,0,0">
                    <Label Content="" 
                           Style="{StaticResource BasicLabel}"
                           Foreground="{DynamicResource Grey-Text}"
                           FontSize="15"/>
                </Border>
            </Border>

        </Grid>

        <Border Grid.Column="2" 
                Grid.Row="2" 
                Background="{DynamicResource Main-Bg}" 
                CornerRadius="10"
                BorderThickness=".5"
                BorderBrush="{DynamicResource Grey-Text}">
            <ContentControl x:Name="ContentView" Content="{Binding Navigation.CurrentView}">
                
            </ContentControl>
        </Border>

        <Grid HorizontalAlignment="Stretch" Grid.ColumnSpan="2" MouseDown="Grid_MouseDown" ClipToBounds="False">

            <Label Content="Ruby Bingo Pro" 
                   Foreground="{DynamicResource Grey-Text}" 
                   FontWeight="Bold" 
                   Height="25"
                   Margin="10,0,0,1" ClipToBounds="False"/>

            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="0,0,2.5,0">
                <Button Width="25" 
                        Height="25" 
                        Content="─" 
                        Foreground="{DynamicResource Grey-Text}" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        FontSize="20" 
                        FontWeight="Bold" 
                        Margin="0,0,0,1" 
                        Click="ButtonMinimize_Click"
                        Template="{StaticResource WindowButtons}"/>

                <Button Width="25" 
                        Height="25" 
                        Content="▢" 
                        Foreground="{DynamicResource Grey-Text}" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        FontSize="15" 
                        FontWeight="Bold" 
                        Margin="0,0,0,0" 
                        Click="ButtonMaximize_Click"
                        Template="{StaticResource WindowButtons}"/>
                
                <Button Width="25" 
                        Height="25" 
                        Content="⨉" 
                        Foreground="{DynamicResource Grey-Text}" 
                        Background="Transparent" 
                        BorderThickness="0" 
                        FontSize="15" 
                        FontWeight="Bold" 
                        Margin="0,0,0,0" 
                        Click="ButtonExit_Click"
                        Template="{StaticResource WindowButtons}"/>

            </StackPanel>
        </Grid>



    </Grid>
</Window>
